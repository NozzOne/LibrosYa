<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BibliotecaMasInfo">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/googlemaps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="90dp"
        android:paddingRight="10dp"
        tools:ignore="MissingConstraints">
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                >

                <ImageView
                    android:id="@+id/Biblioteca_imagen"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/biblioteca_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-black"
                android:maxLines="2"
                android:text="HOLA"
                android:textColor="@color/background"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:maxLines="1"
                android:text="DirecciÃ³n"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/biblioteca_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="direccion"
                android:textColor="@color/navbar_noselected"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:maxLines="1"
                android:text="Codigo Postal"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/biblioteca_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Sin registro"
                android:textColor="@color/navbar_noselected"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:maxLines="1"
                android:text="Contacto"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/biblioteca_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="No existe"
                android:textColor="@color/navbar_noselected"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="VOLVER"
            android:onClick="Volver"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>