<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LibroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:onClick="volver"
            app:srcCompat="@drawable/ic_baseline_arrow" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false">
            <ImageView
                android:id="@+id/book_reserva_imagen"
                android:layout_width="144dp"
                android:layout_height="218dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/book_reserva_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_regular"
            android:text="Papelucho perdido"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:singleLine="true"
            />

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/book_reserva_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Marcela Paz"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/book_reserva_sinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Papelucho es un niño muy curioso y muy inventor, se ocurren muchas ideas y escribe en su diario lo que le va pasando. La Domitila es la nana que trabaja en la casa de Papelucho y de su hermano Javier. Domitila le dice que lo que se le ocurre no se lo cuente a nadie."
            android:textSize="18.1sp"
            android:layout_marginHorizontal="6dp"
            android:textColor="#ddd"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/book_reserva_valoracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.2"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valoración"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

        <Button
            android:id="@+id/btn_reservar"
            style="@style/btn_reserva"
            android:background="@drawable/shadow_btn"
            android:fontFamily="sans-serif-black"
            android:onClick="Reservar"
            android:text="RESERVAR"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_leer"
            style="@style/btn_reserva"
            android:background="@drawable/shadow_btn"
            android:fontFamily="sans-serif-black"
            android:text="comenzar lectura"
            android:textSize="30dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

