<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="46dp"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERFIL"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/profileAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:padding="0dp"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="24dp"
            android:id="@+id/textView9"
            style="@style/perfi_text"
            android:text="Nombre:" />

        <TextView
            android:id="@+id/nombre_usuario"
            style="@style/perfi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/navbar_noselected" />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView10"
            style="@style/perfi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:" />

        <TextView
            android:id="@+id/correo_txt"
            style="@style/perfi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/navbar_noselected" />


        <Button
            android:id="@+id/option_libros"
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="administrar Libros"
            android:layout_marginTop="46dp"/>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/option_bibliotecas"
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="administrar bibliotecas" />

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/cerrar_sesion"
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Cerrar Sesion" />
    </LinearLayout>

</FrameLayout>